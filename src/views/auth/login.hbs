<div class="conteiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <img src="/img/auturito.png" alt="logo arturito" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <input type="text" name="username" placeholder="username" class="form-control">
                        </div>
                        <div class="mb-3">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                            
                            <small> if you don't have an account <a href="/signup" class="link-warning">click here </a></small>
                        </div>
                        <div class="mb-3">
                                <button class="btn btn-success btn-block">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>